<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/menu_back"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageONdrawerLaoout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_user_circlewhite_24dp" />

    <TextView
        android:id="@+id/nameOndrawerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageONdrawerLaoout"
        android:layout_marginStart="7dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/myraind_bold"
        android:text="...."
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/addressOndrawerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:layout_toEndOf="@+id/imageONdrawerLaoout"
        android:layout_below="@+id/nameOndrawerLayout"
        android:text="Dhaka"
        android:textSize="15sp"
        android:fontFamily="@font/myradlight"
        android:textColor="@color/white"
        android:textStyle="normal" />

</RelativeLayout>