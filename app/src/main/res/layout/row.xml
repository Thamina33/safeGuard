<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:elevation="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="92dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/user"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:focusable="true" />

            <TextView
                android:layout_alignParentTop="true"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
            android:text="test user"
                android:fontFamily="@font/myraind_bold"
                android:textAllCaps="true"
            android:textColor="#000"
                android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/profile_image"/>
            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginTop="2dp"
                android:text="Looking For Help"
                android:fontFamily="@font/myradlight"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tt"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginTop="2dp"
                android:text="018xxxxxxxxx"
                android:fontFamily="@font/myraind_bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/pghone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginTop="2dp"
                android:text="Time:"
                android:textAlignment="viewStart"
                android:fontFamily="@font/myradlight"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mapbtn"
                android:layout_width="95dp"
                android:layout_height="130dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#79b338"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                 >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW\nLOCATION"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/myraind_bold"
                        android:textStyle="bold"
                        android:textAlignment="center"

                        />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
