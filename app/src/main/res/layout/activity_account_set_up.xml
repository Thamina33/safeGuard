<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountSetupPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/myraind_bold"
            android:text=" Lets Setup Your Account"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />


        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"
    android:gravity="center"
 >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/browser_actions_bg_grey"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/gresyuser" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/profile_image"
        android:fontFamily="@font/myradlight"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"

        android:text="(Upload a Picture By\nClicking On The Icon)"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/myraind_bold"
            android:text=" Your Personal Information"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
         />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/fullName"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:backgroundTint="#ffffff"
            android:ems="10"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/usr"
            android:fontFamily="@font/myradlight"
            android:hint="Full Name"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            />
        <EditText
        android:id="@+id/nickName"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#ffffff"
       android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/usr"
         android:fontFamily="@font/myradlight"
        android:hint="Nick Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColorHint="#ffffff"
       android:textColor="@color/white"
        android:textSize="16sp"
     />

    <EditText
        android:id="@+id/pContact"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#ffffff"
        android:hint="Personal Phone"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:fontFamily="@font/myradlight"
        android:padding="10dp"
        android:text=""
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:layout_gravity="center"/>

        <EditText
            android:id="@+id/adress"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/myradlight"
            android:hint="Area Ex. Uttra , Banani"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/myraind_bold"
            android:text="Set Up Your Emergency Contact"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/eContact1"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#ffffff"
            android:ems="10"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:fontFamily="@font/myradlight"
            android:hint="Emergency Contact Number 1"
            android:inputType="number"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text=""
            android:textColorHint="#ffffff"
            android:textSize="16sp"
         />

        <EditText
            android:id="@+id/eContact2"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:backgroundTint="#ffffff"
            android:ems="10"
            android:fontFamily="@font/myradlight"
            android:hint="Emergency Contact Number 2"
            android:inputType="number"
            android:textColor="@color/white"
            android:padding="10dp"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:text=""
            android:textColorHint="#ffffff"
            android:textSize="16sp"
             />

        <EditText
            android:id="@+id/eContact3"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:backgroundTint="#ffffff"
            android:ems="10"
            android:fontFamily="@font/myradlight"
            android:hint="Emergency Contact Number 3"
            android:inputType="number"
            android:textColor="@color/white"
            android:padding="10dp"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:text=""
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:background="#00BCD4"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>