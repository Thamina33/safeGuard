<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/greyish"
        android:background="@drawable/my_msg"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/msgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:maxWidth="@dimen/_180sdp"
            android:padding="@dimen/_8sdp"
            android:text="Hello ,Hello Nigga "
            android:textColor="#000000"
            android:textSize="16sp"
            />
        <com.joooonho.SelectableRoundedImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxHeight="@dimen/_200sdp"
            android:maxWidth="@dimen/_200sdp"
            android:id="@+id/image"
            app:sriv_left_top_corner_radius="@dimen/_16sdp"
            app:sriv_right_top_corner_radius="@dimen/_16sdp"
            app:sriv_left_bottom_corner_radius="0dp"
            app:sriv_right_bottom_corner_radius="16dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:40 pm"
        android:textSize="12sp"
        android:id="@+id/dateview"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_toEndOf="@+id/container"


        />




</RelativeLayout>